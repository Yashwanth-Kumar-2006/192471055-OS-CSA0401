#include <stdio.h>

int main() {
    int n; 
    printf("Enter number of processes: ");
    scanf("%d", &n);

    int at[n], bt[n], ct[n], wt[n], tat[n], done[n];
    for(int i=0;i<n;i++){
        printf("Arrival, Burst for P%d: ", i+1);
        scanf("%d %d", &at[i], &bt[i]);
        done[i]=0;
    }

    int time=0, completed=0;
    while(completed<n){
        int idx=-1, min=10000;
        for(int i=0;i<n;i++)
            if(at[i]<=time && !done[i] && bt[i]<min){ min=bt[i]; idx=i; }
        if(idx==-1){ time++; continue; }

        time += bt[idx];
        ct[idx]=time;
        tat[idx]=ct[idx]-at[idx];
        wt[idx]=tat[idx]-bt[idx];
        done[idx]=1; completed++;
    }

    printf("\nP\tAT\tBT\tWT\tTAT\n");
    for(int i=0;i<n;i++)
        printf("P%d\t%d\t%d\t%d\t%d\n",i+1,at[i],bt[i],wt[i],tat[i]);

    return 0;
}
